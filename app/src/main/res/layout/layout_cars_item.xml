<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3sp"
    android:layout_marginRight="3sp"
    app:cardCornerRadius="15sp"
    android:layout_marginTop="10sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_toLeftOf="@+id/layoutTV"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"/>
        <LinearLayout
            android:id="@+id/layoutTV"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp"
            android:layout_marginRight="10sp"
            android:layout_toLeftOf="@+id/layoutButton">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvNameCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merrrrr"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvColorCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merrrrr"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvYearCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Merrrrr"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engine Type: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvEngineTypeCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diesel"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tvPriceCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvQuantityCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_editCar"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/edit"/>
            <ImageView
                android:id="@+id/imgDeleteCar"
                android:layout_marginTop="5sp"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/delete" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>